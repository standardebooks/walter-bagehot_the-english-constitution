		<dc:title id="title">The English Constitution</dc:title>
		<meta property="file-as" refines="#title">English Constitution, The</meta>
		<dc:subject id="subject-1">Constitutional history--Great Britain</dc:subject>
		<dc:subject id="subject-2">Great Britain--Politics and government</dc:subject>
		<meta property="authority" refines="#subject-1">LCSH</meta>
		<meta property="term" refines="#subject-1">sh85056662</meta>
		<meta property="authority" refines="#subject-2">LCSH</meta>
